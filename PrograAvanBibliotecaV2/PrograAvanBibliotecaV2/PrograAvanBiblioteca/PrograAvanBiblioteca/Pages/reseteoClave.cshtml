@page
@model PrograAvanBiblioteca.Pages.reseteoClaveModel
@{
    Layout = null;
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/crearCuenta.css" />
</head>
<body>
    <div class="form-container">
        <h2>Restablecer Contraseña</h2>
        <form method="post">
            <div class="input-container">
                <label for="Correo">Correo electrónico:</label>
                <input type="email" id="Correo" name="Correo" value="@Model.Correo" required />
            </div>

            <div class="input-container">
                <button type="submit">Enviar enlace</button>
            </div>

            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <p class="mensaje" style="color:@(Model.Exito ? "green" : "red")">@Model.Mensaje</p>
            }
        </form>
    </div>
</body>
</html>
