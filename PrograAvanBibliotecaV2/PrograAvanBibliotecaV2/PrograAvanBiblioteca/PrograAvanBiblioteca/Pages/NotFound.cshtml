@page
@model PrograAvanBiblioteca.Pages.NotFoundModel

@{
    ViewData["Title"] = "Página no encontrada";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link rel="icon" href="/icons/icoLibro.png" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f8;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .card-error {
            background-color: white;
            padding: 3rem;
            border-radius: 1.5rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            max-width: 600px;
        }

        .error-code {
            font-size: 6rem;
            font-weight: 700;
            color: #e74c3c;
        }

        .error-text {
            font-size: 1.5rem;
            color: #2C3E50;
            margin-bottom: 1rem;
        }

        .btn-home {
            background-color: #3498DB;
            color: white;
            padding: 0.7rem 2rem;
            border-radius: 0.5rem;
            font-weight: 500;
            text-decoration: none;
        }

        .btn-home:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>
    <div class="card-error">
        <div class="error-code">404</div>
        <div class="error-text">Lo sentimos, la página que buscas no existe.</div>
        <p>Es posible que haya sido eliminada, movida o que la dirección esté mal escrita.</p>
        <a href="/" class="btn-home mt-3">Volver al inicio</a>
    </div>
</body>
</html>

